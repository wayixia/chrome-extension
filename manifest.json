{
   "name": "挖一下",
   "version": "1.5",
   "manifest_version": 2,
   "short_name": "挖一下",
   "description": "图片批量下载和网页截屏(支持截全屏)",
   "permissions": ["activeTab", "tabs", "contextMenus", "downloads", "http://*/*", "https://*/*" ],
   "background": {
      "scripts": [ "config.js", "background.js" ]
   },
   "content_scripts": [ 
     {
      "js": [ "content.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_end"
     } 
   ],
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },
   "browser_action" : {
     "default_title" : "挖一下",
     "default_icon"  : "icon16.png",
     "default_popup" : "popup.html"
   },

   "commands": {
     "toggle-wa-all": {
       "suggested_key": { "default": "Ctrl+Q" },
       "description": "Toggle Wa all images"
     }
   }
}
